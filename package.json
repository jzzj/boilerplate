{
  "name": "boilerplate",
  "version": "0.2.1",
  "description": "Boilerplate for front-end project only use webpack.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jzzj/boilerplate.git"
  },
  "scripts": {
    "test": "npm run prod && (python -m SimpleHTTPServer 8666 &) && python -mwebbrowser http://localhost:8666/static/template/index.html",
    "build": "npm run clean && NODE_ENV=development webpack",
    "dev": "npm run dev:lib && ./bin/dev && npm run clean && NODE_ENV=development node devserver.js",
    "prod": "npm run prod:lib && npm run clean && NODE_ENV=production webpack",
    "dev:lib": "NODE_ENV=development node vendor.webpack.js",
    "prod:lib": "NODE_ENV=production node vendor.webpack.js",
    "clean": "echo \"We're assuming you're using static/ folder to store all builded files, otherwise, you may need to change this command!\" && rm -rf static/"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "chokidar": "^1.6.1",
    "expose-loader": "^0.7.1",
    "express": "^4.14.0",
    "glob": "^7.1.1",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "redbox-react": "^1.3.3",
    "res-dump-plugin": "^0.0.7",
    "res-dump-service": "^0.1.0",
    "webpack": "^1.13.3",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "config": "^1.24.0",
    "jquery": "^3.1.1",
    "react": "^15.4.1",
    "react-dom": "^15.4.1"
  }
}
